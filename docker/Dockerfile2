FROM idrisr/nerdjokesv1:latest

# Make port 80 available to the world outside this container
EXPOSE 80

# Set the working directory to /app
WORKDIR /app

ADD . /app

RUN ["git", "clone", "git@github.com:idrisr/nerdjokes.git"]
RUN cd nerdjokes/backend
RUN ["swift", "build"]
RUN ["./.build/debug/NerdJokesBackend"]
