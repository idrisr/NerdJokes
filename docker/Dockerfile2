FROM idrisr/nerdjokesv1:latest

# Make port 80 available to the world outside this container
EXPOSE 80

# Set the working directory to /app
WORKDIR /app

ADD . /app

RUN ["git", "clone", "--depth", "1", "git@github.com:idrisr/nerdjokes.git"]
RUN ["swift", "build", "--chdir", "/app/nerdjokes/backend"]
CMD ["/app/nerdjokes/.build/debug/NerdJokesBackend"]
