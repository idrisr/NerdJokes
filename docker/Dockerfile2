FROM idrisr/nerdjokesv1:latest

# Make port 80 available to the world outside this container
EXPOSE 80

# Set the working directory to /app
WORKDIR /app

ADD . /app

CMD ["git", "clone", "git@github.com:idrisr/nerdjokes.git"]
CMD ["cd", "nerdjokes/backend || exit"]
CMD ["swift", "build"]
CMD ["./.build/debug/NerdJokesBackend"]
